                            <p> {{this.data.exercise.comment}}</p>
                        </details>
                     {{/if}}
                </td>
            {{else if (isnoneed this.data.exercise.status)}}
                <td>Not required</td>
            {{else}}
                <td class = "comment"> 
                    {{this.data.exercise.data}}
