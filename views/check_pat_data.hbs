<h1>{{name}}'s Data</h1>
<h2>*Red numbers indicate that this data is over the limit, please take care. </h2>

<table class="datatable">
    <thead>
        <tr>
            <th>Date</th>
            <th>B.J level</th>
            <th>Weight</th>
            <th>Doses</th>
            <th>Exercise</th>
        </tr>
    </thead>

    <tbody>
    {{#each record}}
        <tr>
            <td> {{this.recordDate}}</td>

            {{#if (isunrecord this.data.glucose.status)}}
                <td>Unrecorded</td>
            {{else if (isalert this.data.glucose.status)}}
                <td class = "comment" id = 'alert'> 
                    {{this.data.glucose.data}}
                    {{#if this.data.glucose.comment}}
                        <details>
                            <summary>comment:</summary>
                            <p>{{this.data.glucose.comment}}</p>
                        </details>
                    {{/if}}
                </td>
            {{else if (isnoneed this.data.glucose.status)}}
                <td>Not required</td>
            {{else}}
                <td class = "comment"> 
                    {{this.data.glucose.data}}
                    {{#if this.data.glucose.comment}}
                    <details>
                        <summary>comment:</summary>
                        <p>{{this.data.glucose.comment}}</p>
                    </details>
                     {{/if}}
                </td>
            {{/if}}

            {{#if (isunrecord this.data.weight.status)}}
