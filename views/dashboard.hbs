{{> header}}
<div class="container">

    {{#each patient}}
    <div class="pat_info">
        <div class="pats_col">
            <a href="http://localhost:3000/api/patient/findOne/{{this.username}}">
            {{this.name}}
            <img class="browsePage" src="/picture/SpongeBob.svg.png">
            </a>
        </div>

        <table class="pats_col">
            {{#if (isneed this.glucoseStatus)}}
                <tr>
                    {{#if (isalert this.glucoseStatus)}}
                        <td><img src="/icon/red-circle.svg"></td>
                    {{else if (isrecord this.glucoseStatus)}}
                        <td><img src="/icon/green-circle.svg"></td>
                    {{else}}
                        <td><img src="/icon/grey-circle.svg"></td>
                    {{/if}}
                    <td>Blood glucose level:</td><td class="num" onchange="color(value)">{{this.glucose}}</td>
                </tr>
            {{/if}}

            {{#if (isneed this.weightStatus)}}
                <tr>
                    {{#if (isalert this.weightStatus)}}
                        <td><img src="/icon/red-circle.svg"></td>
                    {{else if (isrecord this.weightStatus)}}
                        <td><img src="/icon/green-circle.svg"></td>
                    {{else}}
                        <td><img src="/icon/grey-circle.svg"></td>
                    {{/if}}    
                    <td>Weight:</td><td class="num" onchange="color(value)">{{this.weight}}</td>
                </tr>
            {{/if}}
            
            {{#if (isneed this.insulinStatus)}}
                <tr>
                    {{#if (isalert this.insulinStatus)}}
                        <td><img src="/icon/red-circle.svg"></td>
                    {{else if (isrecord this.insulinStatus)}}
                        <td><img src="/icon/green-circle.svg"></td>
                    {{else}}
                        <td><img src="/icon/grey-circle.svg"></td>
                    {{/if}}    
                    <td>Doses of insulin taken:</td><td class="num" onchange="color(value)">{{this.insulin}}</td>
                </tr> 
            {{/if}}

            {{#if (isneed this.exerciseStatus)}}
                <tr>
                    {{#if (isalert this.exerciseStatus)}}
                        <td><img src="/icon/red-circle.svg"></td>
                    {{else if (isrecord this.exerciseStatus)}}
                        <td><img src="/icon/green-circle.svg"></td>
                    {{else}}
                         <td><img src="/icon/grey-circle.svg"></td>
                    {{/if}}    
                    <td>Exercise:</td><td class="num" onchange="color(value)">{{this.exercise}}</td>
                </tr>
            {{/if}}
            </table>

    </div>
    {{/each}}

</div>
{{> footer}}