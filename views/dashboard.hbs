<p class="sign">Sign up for new patient from <a href="#here">here</a></p>
<form method="post" action="/search">
        <input type="search" size="10" name="patName" placeholder="search" pattern="[A-Za-z]*" title="search" search name>
        <input type="submit" value="Search">
</form>
<div class="container-block">
    <div class="pat_info">

        {{#each pats}}
        <div class="pats_col">
           <a href="/pats/{{this._id}}"><img class="browsePage" src="{{this.photo}}"></a>
           <a href="/pats/{{this._id}}">{{this.name}}</a> 
        </div>
        
        <table class="pats_col">
                {{#if this.bgl.required}}<tr><td>Blood glucose level:</td>{{#ifRecorded}}<td class="num" onchange="color(value)">{{this.bgl}}</td></tr>
                {{#if this.weight.required}}<tr><td>Weight:</td>{{#ifRecorded}}<td class="num" onchange="color(value)">{{this.weight}}</td></tr>
                {{#if this.DIT.required}}<tr><td>Doses of insulin taken:</td>{{#ifRecorded}}<td class="num" onchange="color(value)">{{this.DIT}}</td></tr>
                {{#if this.exercise.required}}<tr><td>Exercise:</td>{{#ifRecorded}}<td class="num" onchange="color(value)">{{this.exercise}}</td></tr>
        </table>
        {{/each}}
        
    </div>
</div>
