


<body style="background-color: white;">
<h1 style="color: black;">Diabetes@HOME</h1>
<div class="login" style="background-color: #3B83E3;">
  
    <form class="login-form" action="/login" method="post"> 
        
      <label class="pat-text-color" for="username">Username:</label>
      <input id="username" name="username" type="text" class="input"/>
      <label class="pat-text-color" for="password"> Password:</label>
      <input id="password" name="password" type="password" class="input" >
      
      <button type="submit" class="btn-login  log-bg"> Log In</button>
  </form>
</div> 
</body>

{{#each flash}}
<p class="alert">{{this}}</p>
{{/each}}

