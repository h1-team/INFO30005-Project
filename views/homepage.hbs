<header>
    <h1>Home Page</h1>
</header>

<main>
    <section>

        <div class = "hello">
            <h2> Hello, {{name}} <img width="40" src="/icon/medal.svg"></h2>
            <p>From your clinician:</p>

            <p id = "message">  {{message}}
            </p>
        </div>




        <div class = "today">
            <h2>Today</h2>

            <p id="date">
            <script> document.write(new Date().toLocaleDateString('en-AU',{  year: 'numeric', month: 'short', day: 'numeric'})); </script>
            </p>



            <p>Data need to be entered today :</p>


            <ul>
                {{#with status}}
                <li>
                    {{#if (isrecord this.glucose)}}
                        <p>Blood glucose level</p>
                        <p>Successfully entered</p>
                    {{else}}
                        <p>Blood glucose level</p>
                        <p>Not yet entered</p>
                    {{/if}}
                </li>
                
                <li>
                    {{#if (isrecord this.weight)}}
                        <p>Weight</p>
                        <p>Successfully entered</p>
                    {{else}}
                        <p>Weight</p>
                        <p>Not yet entered</p>
                    {{/if}}
                </li>

                <li>
                    {{#if (isrecord this.insulin)}}
                        <p>Doses of insulin taken</p>
                        <p>Successfully entered</p>
                    {{else}}
                        <p>Doses of insulin taken</p>
                        <p>Not yet entered</p>
                    {{/if}}
                </li>

                <li>
                    {{#if (isrecord this.exercise)}}
                        <p>Exercise</p>
                        <p>Successfully entered</p>
                    {{else}}
                        <p>Exercise</p>
                        <p>Not yet entered</p>
                    {{/if}}
                </li>
                {{/with}}
            </ul>


        
            <a href="/insert" class = link> 
                <p>Click here to insert your data</p>
                <img src="/icon/circle-right.svg">
            </a>
            
        </div>

    </section>

    <section class="function">

        <a href="leaderboard" class="box">
            <h2>Leaderboard</h2>
            <p>Viewing the full rank list</p>
            <img src="/icon/right.svg">
        </a>

        <a href="/table" class="box">
            <h2>Viewing data</h2>
            <p>To check all previous data</p>
            <img src="/icon/right.svg">
        </a>

        
        <a href="/insert" class="box">
            <h2>Inserting Data</h2>
            <p>To update new data</p>
            <img src="/icon/right.svg">
        </a>
        

        <div class="box">
            <h2>Profile</h2>
            <p>To modify all your basic information</p>
            <img src="/icon/right.svg">
        </div>

    </section>




</main>
